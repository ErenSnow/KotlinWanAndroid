<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation"
    app:startDestination="@id/mainFragment">
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.snow.snowwanandroid.ui.MainFragment"
        android:label="MainFragment">
        <action
            android:id="@+id/action_mainFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_mainFragment_to_systemFragment"
            app:destination="@id/systemFragment" />
        <action
            android:id="@+id/action_mainFragment_to_blogFragment"
            app:destination="@id/blogFragment" />
        <action
            android:id="@+id/action_mainFragment_to_projectFragment"
            app:destination="@id/projectFragment" />
        <action
            android:id="@+id/action_mainFragment_to_mineFragment"
            app:destination="@id/mineFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.snow.snowwanandroid.ui.home.HomeFragment"
        android:label="HomeFragment" />
    <fragment
        android:id="@+id/blogFragment"
        android:name="com.snow.snowwanandroid.ui.blog.BlogFragment"
        android:label="BlogFragment" />
    <fragment
        android:id="@+id/mineFragment"
        android:name="com.snow.snowwanandroid.ui.mine.MineFragment"
        android:label="MineFragment" />
    <fragment
        android:id="@+id/projectFragment"
        android:name="com.snow.snowwanandroid.ui.project.ProjectFragment"
        android:label="ProjectFragment" />
    <fragment
        android:id="@+id/systemFragment"
        android:name="com.snow.snowwanandroid.ui.system.SystemFragment"
        android:label="SystemFragment" />
</navigation>